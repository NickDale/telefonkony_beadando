<Window x:Class="Telefonszamok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telefonszamok"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
     
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="dgAdatok" Grid.Row="1" ItemsSource="{Binding}"/>
        
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem x:Name="miExit" Header="Kilépés" Click="miExit_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Műveletek">
                <MenuItem x:Name="miMindenAdat" Header="Adatok" Click="miMindenAdat_Click"></MenuItem>
                <MenuItem x:Name="miHelyseg" Header="Helységek" Click="miHelyseg_Click"></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
